<Window x:Class="DND.Window_SubraceSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DND"
        mc:Ignorable="d"
        Title="Window_SubraceSelection" Height="600" Width="500" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <!-- 
    Dwarf 2
    Elf 3
    Halfling 2
    Human 9 - Faces with diff. Complexity
    Dragonborn 10 - Scales in diff. Color ?
    Gnome 2
    Half-Elf 0
    Half-Orc 0
    Tiefling 0
    
    -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Name="Frame_SubraceSelection" NavigationUIVisibility="Hidden"/>
        <DockPanel Grid.Row="1">
            <Button Grid.Row="1" Name="Btn_Subrace_Continue" Padding="5" VerticalAlignment="Center" HorizontalAlignment="Right" DockPanel.Dock="Right" Content="Close" FontSize="14" Margin="0,10,10,9" Click="Btn_Subrace_Close_Click"/>
            <DockPanel.Background>
                <ImageBrush ImageSource="../Resources_Creation/Banner1.jpg" Stretch="UniformToFill"/>
            </DockPanel.Background>
        </DockPanel>
       
    </Grid>
</Window>
