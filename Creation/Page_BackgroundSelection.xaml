<Page x:Class="DND.Page_BackgroundSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DND"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_BackgroundSelection">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources_Creation/PaperTexture.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="ListBox_BackgroundTitle" Margin="10" Background="Transparent" BorderThickness="0" >
            <ListBoxItem Content="Acolythe"/>
            <ListBoxItem Content="Charlatan"/>
            <ListBoxItem Content="Criminal"/>
            <ListBoxItem Content="Entertainer"/>
            <ListBoxItem Content="Folk Hero"/>
            <ListBoxItem Content="Guild Artisan"/>
            <ListBoxItem Content="Hermit"/>
            <ListBoxItem Content="Noble"/>
            <ListBoxItem Content="Outlander"/>
            <ListBoxItem Content="Sage"/>
            <ListBoxItem Content="Sailor"/>
            <ListBoxItem Content="Soldier"/>
            <ListBoxItem Content="Urchin"/>
        </ListBox>
    </Grid>
</Page>
