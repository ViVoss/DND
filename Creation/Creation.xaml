<Window x:Class="DND.Creation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DND"
        mc:Ignorable="d"
        Title="Creation" Name="CreationName" Height="800" Width="1280" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Frame Name="Frame1" NavigationUIVisibility="Hidden"/>
        <DockPanel Grid.Row="1">
            <DockPanel.Background>
                <ImageBrush ImageSource="Resources_Creation/Banner1.jpg" Stretch="UniformToFill"/>
            </DockPanel.Background>
            <Button Name="Btn_Continue" Margin="5" Padding="5" VerticalAlignment="Center" HorizontalAlignment="Right" DockPanel.Dock="Right" Click="Btn_Continue_Click" Content="Continue"/>
            <Button Name="Btn_Back" Margin="5" Padding="5" VerticalAlignment="Center" HorizontalAlignment="Right" DockPanel.Dock="Right" Click="Btn_Back_Click" Content="Back"/>
        </DockPanel>
        <TextBox TextWrapping="Wrap" Grid.Row="1" Name="Textbox_Selection_Info" Margin="10" HorizontalAlignment="Left" Width="150" IsReadOnly="True"/>
    </Grid>
</Window>
