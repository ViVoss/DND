<Page x:Class="DND.Level_Table_Barbarian"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DND"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800" Background="Transparent"
      Title="Level_Table_Barbarian">

    <Grid>
        <ListView Name="ListView_LevelTable" HorizontalAlignment="Left" VerticalAlignment="Top" Height="150" Margin="10" BorderBrush="Black" BorderThickness="1" SelectionChanged="ListView_LevelTable_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Level" DisplayMemberBinding="{Binding Level}" Width="50"/>
                    <GridViewColumn Header="Proficiency&#x0a;Bonus" DisplayMemberBinding="{Binding ProficiencyBonus}" Width="63"/>
                    <GridViewColumn Header="Features" DisplayMemberBinding="{Binding Features}" Width="560"/>
                    <GridViewColumn Header="Rages" DisplayMemberBinding="{Binding Rages}" Width="50"/>
                    <GridViewColumn Header="Rage&#x0a;Damage" DisplayMemberBinding="{Binding RageDamage}" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>